<Window x:Class="FeedbackFactory.KeyGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Key Generator" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Optionen -->
            <TextBlock Text="Wählen Sie eine Option:" FontSize="16" HorizontalAlignment="Center" Margin="10"/>

            <!-- RadioButtons untereinander ausrichten -->
            <RadioButton x:Name="Option1" Content="Unterrichtsbeurteilung" GroupName="Options" Margin="5"/>
            <RadioButton x:Name="Option2" Content="Zielscheibe" GroupName="Options" Margin="5"/>
            <RadioButton x:Name="Option3" Content="Formular 3" GroupName="Options" Margin="5"/>

            <!-- Button zum Generieren des Schlüssels -->
            <Button Content="Generiere Schlüssel" Width="150" Height="40" HorizontalAlignment="Center" Click="GenerateKeyButton_Click" Margin="0,10" x:Name="GenerateKeyButton"/>
            <!-- Anzeige des generierten Schlüssels -->
            <TextBlock x:Name="GeneratedKeyText" FontSize="16" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10"/>
        

        </StackPanel>
    </Grid>
</Window>
