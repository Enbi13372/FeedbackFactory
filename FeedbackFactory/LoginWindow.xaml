<Window x:Class="FeedbackFactory.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FeedbackFactory"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <!-- Define rows in the grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for login content (buttons) -->
            <RowDefinition Height="*"/>
            <!-- Row for content (TeacherView or StudentView) -->
        </Grid.RowDefinitions>

        <!-- Login Content (Buttons) -->
        <StackPanel x:Name="LoginContent" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Login" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,30"/>

            <Button x:Name="LehrerButton" Content="Lehrer" Width="200" Height="50" Margin="0,10" Click="LehrerButton_Click"/>
            <Button x:Name="SchuelerButton" Content="Schüler" Width="200" Height="50" Margin="0,10" Click="SchuelerButton_Click"/>
        </StackPanel>

        <!-- MainContent to display dynamic views (TeacherView, StudentView) -->
        <ContentControl x:Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Margin="30"/>
    </Grid>
</Window>
