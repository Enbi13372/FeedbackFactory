<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Blue Background for Login Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="#D7E4F2"/>
        <!-- Matches MainWindow -->
    </Style>

    <!-- Clickable Labels (Hoverable TextBlock) -->
    <Style x:Key="HoverableTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Blue"/>
        <!-- Default color -->
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TextDecorations" Value="None"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="DarkBlue"/>
                <!-- On hover -->
                <Setter Property="TextDecorations" Value="Underline"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shared TextBox Style -->
    <Style TargetType="TextBox">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="#B9D3EE"/>
        <!-- Light blue border -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#333"/>
        <!-- Dark gray text -->
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shared PasswordBox Style -->
    <Style TargetType="PasswordBox">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="#B9D3EE"/>
        <!-- Light blue border -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#333"/>
        <!-- Dark gray text -->
        <Setter Property="Background" Value="White"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Shared Button Style -->
    <Style TargetType="Button">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="Background" Value="#0078D7"/>
        <!-- Primary Blue -->
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#0078D7"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <!-- Hover and Press Triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#005A9E"/>
                            <!-- Darker blue -->
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#005A9E"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#004377"/>
                            <!-- Even darker blue -->
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#004377"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
