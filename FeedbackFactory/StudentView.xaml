<UserControl x:Class="FeedbackFactory.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/LoginStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#F9F9F9" Margin="30">
        <!-- Back Button -->
        <Button Content="← Zurück" Width="80" Height="35" Margin="10" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Background="#E0E0E0" Foreground="#333" Click="BackButton_Click"/>

        <!-- Title -->
        <TextBlock Text="Schüler Login" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,20"/>

        <!-- Key Input -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" 
                    HorizontalAlignment="Center" Margin="0,100,0,0">
            <TextBlock Text="Schlüssel"/>
            <TextBox Margin="0,5"/>
            <Button Content="Weiter"/>
        </StackPanel>
    </Grid>
</UserControl>
